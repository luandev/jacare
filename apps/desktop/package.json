{
  "name": "@crocdesk/desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "author": "Jacare Contributors",
  "description": "Jacare - Desktop ROM library manager",
  "build": {
    "appId": "com.jacare.app",
    "productName": "Jacare",
    "electronVersion": "29.1.0",
    "directories": {
      "output": "../../release/desktop"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "../web/dist",
        "to": "web/dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../server/dist",
        "to": "server/dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../../packages/shared/dist",
        "to": "packages/shared/dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "build/icon.png",
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "asarUnpack": [
      "**/better-sqlite3/**/*"
    ]
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "node -e \"if(!process.env.CI){require('child_process').execSync('electron-builder install-app-deps',{stdio:'inherit'})}\"",
    "dev": "npm run build && cross-env CROCDESK_DEV_URL=http://localhost:5173 electron .",
    "dev:embedded": "npm run rebuild && npm run build && electron .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@crocdesk/server": "*",
    "@crocdesk/shared": "*",
    "better-sqlite3": "^9.4.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "p-queue": "^8.0.1",
    "unzipper": "^0.10.11"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@types/node": "^20.11.19",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.4.5"
  }
}
